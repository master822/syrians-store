<script>
// نظام التبويبات
document.addEventListener('DOMContentLoaded', function() {
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabContents = document.querySelectorAll('.tab-content');
    
    tabButtons.forEach(button => {
        button.addEventListener('click', function() {
            const tabId = this.getAttribute('data-tab');
            
            // إزالة النشاط من جميع الأزرار والمحتويات
            tabButtons.forEach(btn => {
                btn.classList.remove('active', 'text-white', 'border-blue-400');
                btn.classList.add('text-white/60');
            });
            
            tabContents.forEach(content => {
                content.classList.remove('active');
                content.classList.add('hidden');
            });
            
            // إضافة النشاط للزر والمحتوى المحدد
            this.classList.add('active', 'text-white', 'border-b-2', 'border-blue-400');
            this.classList.remove('text-white/60');
            
            document.getElementById(tabId + 'Tab').classList.add('active');
            document.getElementById(tabId + 'Tab').classList.remove('hidden');
        });
    });
});
</script>

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
